	cncHdlr.processCmds, ok = commands.({{ $cnc.Name }}ProcessCommands)
	if !ok {
		return fmt.Errorf("Invalid interface for {{ $cnc.Name }}ConcernHandler.SetProcessCommands: %T", commands)
